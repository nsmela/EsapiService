<UserControl x:Class="TestWpf.Ui.StructureColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestWpf.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Width" Value="20"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Maximum" Value="255"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="5" 
                BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
            <Border.Background>
                <SolidColorBrush Color="{Binding CurrentColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Border.Background>
            <TextBlock Text="Preview" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="White" FontWeight="Bold" IsHitTestVisible="False">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="2" Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <StackPanel Grid.Column="1" Margin="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="R" Foreground="Red" FontWeight="Bold"/>
                <Slider Grid.Column="1" Value="{Binding Red, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <TextBlock Grid.Column="2" Text="{Binding Red, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Right"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="G" Foreground="Green" FontWeight="Bold"/>
                <Slider Grid.Column="1" Value="{Binding Green, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <TextBlock Grid.Column="2" Text="{Binding Green, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Right"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="B" Foreground="Blue" FontWeight="Bold"/>
                <Slider Grid.Column="1" Value="{Binding Blue, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <TextBlock Grid.Column="2" Text="{Binding Blue, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Right"/>
            </Grid>

            <TextBlock Text="{Binding StatusMessage, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       FontSize="10" Foreground="Gray" Margin="0,5,0,0" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</UserControl>
